<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Pet Index</title>
    <link rel="stylesheet" href="/static/style.css">
  </head>
  <body>

    <h1>Pet Profile: {{name}}</h1>

    {{#pet}}
      <div class="general-info">
        <h2>General Info:</h2>
        <h3>Species: {{species}}</h3>
        <h3>Gender: {{gender}}</h3>
        <h3>Age: {{age}}</h3>
        <h3>Nicknames: {{nicknames}}</h3>
      </div>

      <div class="diet">
        <h2>Diet:</h2>
        {{^diet}}
          <p>No diet info provided.</p>
        {{/diet}}
        {{#diet}}
          <ul>
            <li>Food Type: {{foodType}}</li>
            <li>Frequency: {{frequency}}</li>
            <li>Quantity: {{quantity}}</li>
          </ul>
        {{/diet}}
      </div>
    {{/pet}}

  </body>
</html>
