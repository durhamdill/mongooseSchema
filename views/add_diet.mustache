<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add Pet Diet</title>
    <link rel="stylesheet" type="text/css" href="../../css/style.css">
    <link rel="stylesheet" href="https://cdn.shoelace.style/1.0.0-beta21/shoelace.css">
  </head>
  <body>

    {{#pet}}

    <h2>Add Diet for {{name}}</h2>

    <form action="/{{_id}}/add_diet/" method="POST">

      {{#diet}}
      <ul>
        <li>Food Type: {{foodType}}</li>
        <li>Frequency: {{frequency}}</li>
        <li>Quantity: {{quantity}}</li>
      </ul>
      {{/diet}}

      <fieldset>
        <legend>DIET</legend>

        <p>
          <label for="foodType">Food Type:</label>
          <input type="text" id="foodType" name="foodType" />
        </p>

        <p>
          <label for="frequency">Frequency:</label>
          <input type="text" id="frequency" name="frequency" />
        </p>

        <p>
          <label for="quantity">Quantity:</label>
          <input type="text" id="quantity" name="quantity" />
        </p>

        <p>
          <button type="submit">Add diet</button>
        </p>

      </fieldset>

    </form>

    {{/pet}}

  </body>
</html>
